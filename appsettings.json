{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.File", "Serilog.Sinks.Async" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Error",
        "System": "Error"
      }
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "Logs/log-.txt",
                "outputTemplate": "{Timestamp:HH:mm:ss.fff} [{Level:u3}] [{CorrelationId}] IP:{ClientIP} {Message:lj}{NewLine}{Exception}",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7 //It will delete back dated files older than 7 days
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext", "WithEnvironmentName" ]
  }
}
